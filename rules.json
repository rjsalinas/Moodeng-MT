    "rules": [
      {
        "rule_id": "SUB_DASH_01",
        "op_type": "substitution",
        "family": "dash_normalization",
        "paper_rule": "RULE-27 DASH vs NODASH",
        "ortho_label": "ORTHO.DASH",
        "description": "Normalize to hyphen for reduplication and affix boundaries",
        "pattern": "space→hyphen at morpheme boundaries",
        "direction": "space→hyphen",
        "scope": "substr",
        "canonical_choice": "hyphen",
        "rationale": "Improves readability for reduplication (araw-araw) and affix boundaries (mag-aral)",
        "preconditions": [
          "is_reduplication OR is_affix_boundary",
          "not_inside_simple_root"
        ],
        "examples": [
          {"before": "araw araw", "after": "araw-araw", "context": "reduplication"},
          {"before": "mag aral", "after": "mag-aral", "context": "affix boundary"}
        ],
        "confidence_default": 0.98,
        "variation_index": "high",
        "deprecated": false,
        "notes": "Highest frequency rule from paper. Remove spurious hyphens inside simple roots."
      },
      {
