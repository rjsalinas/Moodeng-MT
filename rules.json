        "family": "orthography_variant",
        "paper_rule": "RULE-2 o vs u",
        "ortho_label": "ORTHO.O_U",
        "description": "Normalize o↔u alternation per modern Filipino usage",
        "pattern": "o↔u",
        "direction": "context_dependent",
        "scope": "char",
        "canonical_choice": "prefer o in open syllables, u where 2001 Revisyon shows stable usage",
        "rationale": "Second highest frequency rule. Favor o in open syllables, u in closed/loans",
        "preconditions": [
          "lang in [fil, tag]",
          "not_proper_name"
        ],
        "examples": [
          {"before": "kumusta", "after": "kamusta", "context": "common greeting"},
          {"before": "baso", "after": "baso", "context": "Filipinized loan, keep o"}
        ],
        "confidence_default": 0.95,
        "variation_index": "high",
        "deprecated": false,
        "notes": "For loans with v/b alternation, prefer Filipinized b (baso) unless code-switching"
